{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "require": "readonly",
        "process": "readonly",
        "module": "readonly",
        "describe": "readonly",
        "expect": "readonly",
        "xit": "readonly",
        "it": "readonly",
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": 0,
        "no-mixed-spaces-and-tabs": 0,
        "linebreak-style": 0,
        "quotes": 0,
        "semi": 1,
        "no-unused-vars" : 2,
        "no-useless-escape": 0,
        "no-extra-semi": 2,
        "no-extra-boolean-cast" : 0,
        "no-unreachable": "warn",
        "space-infix-ops": ["error"]
    }
}